<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Màu nền của LinearLayoutCompat -->
    <corners android:radius="8dp" /> <!-- Bo góc của LinearLayoutCompat -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" /> <!-- Khoảng cách giữa đường viền và nội dung của LinearLayoutCompat -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Màu và độ rộng của đường viền -->
    <solid android:color="@color/Primary_40" />
</shape>
