<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/item_result_room"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/rounded_background_item_result"
    android:layout_height="wrap_content"
    tools:ignore="InvalidId">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/shimmerFrameLayout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/imageViewImageRoom"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@color/Secondary_80"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>


                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/likedCheckBox"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:layout_gravity="top|end"
                    android:button="@drawable/heart_checkbox_selector"
                    app:buttonTint="@color/white"
                    android:buttonTintMode="multiply"
                    android:layout_margin="0dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shimmer_background"
                    android:layout_width="100dp"
                    android:id="@+id/textViewAmountPeople"
                    android:textColor="@color/Secondary_40"
                    android:textSize="14dp"

                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:maxLines="2"
                    android:textColor="@color/Secondary_20"
                    android:background="@drawable/shimmer_background"
                    android:textSize="18dp"
                    android:id="@+id/textViewRoomName"
                    android:textStyle="bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:maxLines="2"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/shimmer_background"
                    android:id="@+id/textViewAddress"
                    android:textColor="@color/Secondary_20"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="150dp"
                    android:id="@+id/textViewPrice"
                    android:background="@drawable/shimmer_background"
                    android:textColor="@color/Primary_60"
                    android:textSize="14dp"
                    android:textStyle="bold"

                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>